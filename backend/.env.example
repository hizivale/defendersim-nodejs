# Server Configuration
PORT=8000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/defendersim
# For MongoDB Atlas (free tier):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/defendersim?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRE=7d

# Mailpit Configuration
MAILPIT_API_URL=http://127.0.0.1:8025/api/v1
MAILPIT_SMTP_HOST=127.0.0.1
MAILPIT_SMTP_PORT=1025

# Ollama Configuration
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://your-frontend-domain.netlify.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
